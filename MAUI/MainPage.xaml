<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.MainPage">

    <VerticalStackLayout Spacing="0" Padding="5">

        <HorizontalStackLayout Spacing="0" Padding="5">
            <TableView x:Name="table" HeightRequest="200" WidthRequest="200" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <TableRoot>
                    <TableSection Title="View Options">
                        <SwitchCell 
                        x:Name="OrbitToggle"
                        Text="Hide Orbit" 
                        />
                        <SwitchCell 
                        x:Name="NameToggle"
                        Text="Hide Names" 
                        />
                    </TableSection>
                </TableRoot>

                
            </TableView>

            <Picker x:Name="picker">
            </Picker>

        </HorizontalStackLayout>

        <GraphicsView x:Name="draw" HeightRequest="1200" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        </GraphicsView>
        
    </VerticalStackLayout>

</ContentPage>
